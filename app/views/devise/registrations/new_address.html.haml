.adress_body
  .adress_header
    .adress_header__logo
      = image_tag src="/images/fmarket_logo_red.svg", size: "200x100"
    %ul.adress_header__pankuzu
      %li.adress_header__pankuzu__register_inform_text
        会員情報
        .adress_header__pankuzu__register_inform_text__status
          ●
        .adress_header__pankuzu__register_inform_text__underline
          あ
      %li.adress_header__pankuzu__phone_number_text
        電話番号認証
        .adress_header__pankuzu__phone_number_text__status
          ●
        .adress_header__pankuzu__phone_number_text__underline
          あ
      %li.adress_header__pankuzu__adress_text
        お届け先住所入力
        .adress_header__pankuzu__adress_text__status
          ●
        .adress_header__pankuzu__adress_text__underline
          あ
      %li.adress_header__pankuzu__pay_text
        お支払い方法
        .adress_header__pankuzu__pay_text__status
          ●
        .adress_header__pankuzu__pay_text__underline
          あ
      %li.adress_header__pankuzu__done_text
        完了
        .adress_header__pankuzu__done_text__status
          ●
  .adress_content_text
    .adress_content_text__top
      住所入力
    .adress_content_text__main
      = form_for @address, url: signup_creditcards_path, method: :get do |f|
        .adress_content_text__main__person
          郵便番号
          .adress_content_text__main__person_required
            必須
        .adress_content_text__main__post_number_form
          = f.text_field :zipcode, placeholder: "例）123-4567", class:"adress_content_text__main__post_number_form__button", autofocus: true, required: true     
        .adress_content_text__main__person
          都道府県
          .adress_content_text__main__person_required
            必須
        .adress_content_text__main__prefectures__form
          .adress_content_text__main__prefectures__form_icon
            %i.fas.fa-angle-down.1
          =f.select :prefecture, ["------"], {}, {class: "select-default_prefectures", id:"selPref"}
        .adress_content_text__main__person
          市区町村
          .adress_content_text__main__person_required
            必須
        .adress_content_text__main__municipality
          .adress_content_text__main__person_name__last_name
            = f.text_field :city, placeholder: "例）横浜市緑区", class:"adress_content_text__main__person_name__last_name_button", required: true     
        .adress_content_text__main__person
          番地
          .adress_content_text__main__person_required
            必須
        .adress_content_text__main__municipality
          .adress_content_text__main__person_name__last_name
            = f.text_field :detail_address, placeholder: "例）青山1-1-1", class:"adress_content_text__main__person_name__last_name_button", required: true     
        .adress_content_text__main__building
          建物名
          .adress_content_text__main__building__required
            任意
        .adress_content_text__main__municipality
          .adress_content_text__main__person_name__last_name
            = f.text_field :building, placeholder: "例）柳ビル103", class:"adress_content_text__main__person_name__last_name_button"            
        .adress_content_text__main__building
          電話番号
          .adress_content_text__main__building__required
            任意
        .adress_content_text__main__municipality
          .adress_content_text__main__person_name__last_name
            = f.text_field :optional_phone_number, placeholder: "例）09012345678", class:"adress_content_text__main__person_name__last_name_button"                     
        .adress_content_text__main__prefectures__button
          %button.btn-default.btn-red{:type => "submit"} 次へ進む
= render "items/items-footer"