.new_items 
  .new_items__contents 
    .new_items__contents__header 
      .new_items__contents__header__title
        = searched_category.name
        の商品一覧
      = link_to "#", class: "new_items__contents__header__more" do
        もっとみる ＞
    .new_items__contents__grid
      - result_items.each_with_index do |item, i|
        .new_items__contents__grid__item
          = link_to item_path(item.id) do
            = image_tag item.images.last.image.url, class: "new_items__contents__grid__item__image"
            .new_items__contents__grid__item__price
              ¥
              = item.price
            .new_items__contents__grid__item__name
              = item.name
              %br/
              = item.category.name