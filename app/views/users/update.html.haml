.pay_body
  .pay_header
    .pay_header__logo
      = image_tag src="/images/fmarket_logo_red.svg", size: "200x100"
    %ul.pay_header__pankuzu
      %li.pay_header__pankuzu__register_inform_text
        会員情報
        .pay_header__pankuzu__register_inform_text__status
          ●
        .pay_header__pankuzu__register_inform_text__underline
          あ
      %li._header__pankuzu__phone_number_text
        電話番号認証
        .pay_header__pankuzu__phone_number_text__status
          ●
        .pay_header__pankuzu__phone_number_text__underline
          あ
      %li.pay_header__pankuzu__adress_text
        お届け先住所入力
        .pay_header__pankuzu__adress_text__status
          ●
        .pay_header__pankuzu__adress_text__underline
          あ
      %li.pay_header__pankuzu__pay_text
        お支払い方法
        .pay_header__pankuzu__pay_text__status
          ●
        .pay_header__pankuzu__pay_text__underline
          あ
      %li.pay_header__pankuzu__done_text
        完了
        .pay_header__pankuzu__done_text__status
          ●
  .pay_content_text
    .pay_content_text__top
      支払い方法
    .pay_content_text__main
      .pay_content_text__main__creditcard
        .credit_content
          .credit_content__group
            %label.label1{for: "payment_card_no"} カード番号
            %span.credit_content__require 必須
            %input#payment_card_no.credit_contet__input{data_input_type: "card",maxlength: "19",placeholder: "半角数字のみ",type: "text", value: ""}/
            %ul#card-no-error-wrapper.credit_contet__group__text
            %ul.credit_content__group__list
              %li
                = image_tag "/images/visa.svg", height: 20, width: 32
              %li
                = image_tag "/images/master-card.svg", height: 20, width: 32
              %li
                = image_tag "/images/saison-card.svg", height: 20, width: 32
              %li
                = image_tag "/images/jcb.svg", height: 20, width: 32
              %li
                = image_tag "/images/american_express.svg", height: 20, width: 32
              %li
                = image_tag "/images/dinersclub.svg", height: 20, width: 32
              %li
                = image_tag "/images/discover.svg", height: 20, width: 32
          .credit_content__expire
            %label.label1{:for => "payment_card_expire"} 有効期限
            %span.credit_content__require 必須
            %br
            .credit_content__expire__hal
              %select#payment_card_expire_mm.select-default
                %option{value: "01"} 01
                %option{value: "02"} 02
                %option{value: "03"} 03
                %option{value: "04"} 04
                %option{value: "05"} 05
                %option{value: "06"} 06
                %option{value: "07"} 07
                %option{value: "08"} 08
                %option{value: "09"} 09
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              %i.fas.fa-chevron-down
              %span 月
            .credit_content__expire__hal
              %select#payment_card_expire_yy.select-default
                %option{value: "19"} 19
                %option{value: "20"} 20
                %option{value: "21"} 21
                %option{value: "22"} 22
                %option{value: "23"} 23
                %option{value: "24"} 24
                %option{value: "25"} 25
                %option{value: "26"} 26
                %option{value: "27"} 27
                %option{value: "28"} 28
                %option{value: "29"} 29
              %i.fas.fa-chevron-down
              %span 年
            %ul#expire-mm-error-wrapper.has-error-text
            %ul#expire-yy-error-wrapper.has-error-text
          .credit_content__form
            %label.label1{for: "payment_card_security_code"} セキュリティコード
            %span.credit_content__require 必須
            %input#payment_card_security_code.credit_content__form__input{placeholder: "カード背面4桁 or 3桁の番号", type: "number", value: ""}/
            %ul#security-code-error-wrapper.has-error-text
            .credit_content__form__seqcode
              .credit_content__form__seqcode__text
                %span.credit_content__form__seqcode__text__question> ?
                カード裏面の番号とは？
          %input#user_id{name: "user_id",type: "hidden", value: ""}/
          %input#encrypted_card_data{name: "encrypted_card_data", type: "hidden"}/
          %p#primary-error.credit_contents__text
      .pay_content_text__main__button
        %button.btn-default.btn-red{:type => "submit"} 次へ進む
= render "items/items-footer"