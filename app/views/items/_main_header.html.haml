.main_header 
  .main_header__box
    .main_header__box__upper
      .main_header__box__upper__icon
        = link_to root_path, class: "main_header__link" do
          = image_tag "/images/fmarket_logo_red.svg", class: "main_header__box__upper__icon__image"
      .main_header__box__upper__search
        = form_with(url: search_items_path, local: true, method: :get, class: "search-form") do |form|
          = form.text_field :keyword, placeholder: "何かお探しですか？", class: "search-input"
          = icon('fas', 'search', class: "main_header__box__upper__search__icon")
    .main_header__box__lower
      %ul.main_header__box__lower__select.categories_box
        %li.main_header__box__lower__select__lists
          = link_to categories_path, class: "main_header__link categories-list__link" do
            = icon('fas', 'list', class: "main_header__box__lower__select__lists__icon")
            カテゴリィから探す
            = render partial: '/categories/categories_list', locals: { categories: @categories }
        %li.main_header__box__lower__select__lists.brand_box
          = link_to "#", class: "main_header__link brand_box" do
            = icon('fas', 'tags', class: "main_header__box__lower__select__lists__icon")
            ブランドから探す
      %ul.main_header__box__lower__users
        - if user_signed_in?
          %li.main_header__box__lower__users__lists.main_header__box__lower__users__lists--like
            = link_to "#", class: "main_header__link" do
              = icon('far', 'heart', class: "main_header__box__lower__users__lists__icon")
              .main_header__box__lower__users__lists__title
                いいね!一覧
          %li.main_header__box__lower__users__lists
            = link_to "#", class: "main_header__link" do
              = icon('far', 'bell', class: "main_header__box__lower__users__lists__icon")
              .main_header__box__lower__users__lists__title
                お知らせ
          %li.main_header__box__lower__users__lists
            = link_to "#", class: "main_header__link" do
              = icon('fas', 'check', class: "main_header__box__lower__users__lists__icon")
              .main_header__box__lower__users__lists__title
                やることリスト
          %li.main_header__box__lower__users__lists
            = link_to user_profiles_path, class: "main_header__link" do
              = icon('fas', 'user-circle', class: "main_header__box__lower__users__lists__icon")
              .main_header__box__lower__users__lists__title
                マイページ
        -else 
          %li.main_header__box__lower__users__lists 
            = link_to users_path, class: "main_header__link" do
              .main_header__box__lower__users__lists__title
                新規会員登録
          %li.main_header__box__lower__users__lists
            = link_to new_user_session_path, class: "main_header_link" do
              .main_header__box__lower__users__lists__title              
                ログイン